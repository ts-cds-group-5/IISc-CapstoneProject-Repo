{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Attach to Uvicorn",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/common",
          "remoteRoot": "."
        }
      ]
    },
    {
      "name": "Python: Uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "cccp.api.server:app",
        "--host",
        "localhost",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
