# CCCP Advanced Configuration
# Copy this file to .env and modify as needed

# Application
DEBUG=false
ENVIRONMENT=development

# API
API_HOST=localhost
API_PORT=8000
API_PREFIX=/api/v1

# Model
#MODEL_TYPE=auto  # Uncomment to enable auto-detection (Ollama first, fallback to Phi2)
# For Phi-2 model
#MODEL_NAME=microsoft/phi-2
#MODEL_TYPE=phi2
###
# for Ollama model  
MODEL_NAME=llama3.2:latest
MODEL_TYPE=ollama
####
#MODEL_NAME=microsoft/phi-2
#MODEL_NAME=llama3.2:latest
#MODEL_TYPE=phi2
MODEL_DEVICE=cpu
MODEL_MAX_LENGTH=512
MODEL_TEMPERATURE=0.2
MODEL_REPETITION_PENALTY=1.2

# Ollama
OLLAMA_BASE_URL=http://localhost:11434

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=

# MCP Server
MCP_HOST=localhost
MCP_PORT=8001
MCP_TOOLS=math,file

# LangGraph
LANGGRAPH_DEBUG=false
MAX_ITERATIONS=10

# Security
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=*

# Database
# PostgreSQL Database -- check for docker
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# MCP PostgreSQL Server
#Application → MCP Client → MCP Server (port 8001) → PostgreSQL (port 5432)
MCP_POSTGRES_ENABLED=true
MCP_POSTGRES_HOST=localhost
MCP_POSTGRES_PORT=8001
# MCP_SERVER_PATH=/path/to/mcp_server.py  # Optional: defaults to {project_root}/mcp_server.py
